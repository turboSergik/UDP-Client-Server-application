<Window x:Class="VideoStreamingServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoStreamingServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ContextMenuClosing="Grid_ContextMenuClosing">

        <Button Content="Start streaming display" Margin="529,328,83.6,50" RenderTransformOrigin="0.5,0.5" Click="Button_Start"/>

        <Image Margin="10,10,25.6,101"  Name="Pic">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF1F0F0F" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>

    </Grid>
</Window>
